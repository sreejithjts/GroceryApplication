<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="parallel" parallel="tests">

<!--for report gen when the test cases are executed-->
<listeners>
 <listener class-name="reportgeneration.Listener">
 </listener>
 </listeners>
 
  <test thread-count="5" name="Test">
  <!--first time running browser=chrome-->
  <parameter name="browser" value="chrome"></parameter>
    <classes>
     <!-- <class name="testscript.HomeTest"/>-->
      <!--<class name="testscript.ManageNewsTest"/>-->
      <!--<class name="testscript.AdminTest"/>-->
      <!--<class name="testscript.LoginTest"/>-->
      
      <!--this is to run a single method present in the logintest class-->
      <class name="testscript.LoginTest">
      <methods>
      <include name="verifyLoginWithInvalidUsernameInvalidPassword"></include>
      </methods>
      </class>
    </classes>
  </test>
  
  
  <!--for the second browser-->
  <test thread-count="5" name="FirefoxTest">
  <parameter name="browser" value="firefox"></parameter>
    <classes>
     <!-- <class name="testscript.HomeTest"/> -->
      <!-- <class name="testscript.ManageNewsTest"/> -->
      <!--<class name="testscript.AdminTest"/>-->
      <!--<class name="testscript.LoginTest"/>-->
      
      <!--this is to run a single method present in the logintest class-->
      <class name="testscript.LoginTest">
      <methods>
      <include name="verifyLoginWithInvalidUsernameInvalidPassword"></include>
      <!--to exclude one test method to run in testNG,for each-->
      <!-- <exclude name=""></exclude>-->
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
